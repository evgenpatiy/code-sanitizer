<?xml version="1.0" encoding="UTF-8"?>
<Configuration
 packages="ua.com.foxminded.sanitizer.ui.elements" status="INFO">
 <Appenders>
  <TextAreaAppender name="JavaFXLogger">
   <PatternLayout
    pattern="%d{dd-MM-yyyy HH:mm:ss} %-5level %msg%n" />
  </TextAreaAppender>
 </Appenders>
 <Loggers>
  <Root level="debug">
   <AppenderRef ref="JavaFXLogger" />
  </Root>
 </Loggers>
</Configuration>  
